<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.taihu.logistics.mapper.ContractMapper">
	<insert id="saveContract">
	INSERT INTO contract (order_id,user_id,start_date,end_date,security,pname,sadd,eadd,price,distance) 
	VALUES
(#{orderId},#{userId},#{startDate},#{endDate},#{security},#{pname},#{sadd},#{eadd},#{price},#{distance})
	</insert>
	
	<select id="findContractByUserId"  resultType="Contract">
  		SELECT * FROM contract WHERE user_id=#{userId}
  	</select>
	
	<select id="findContractById" resultType="Contract">
		SELECT * FROM contract WHERE order_id=#{orderId}
	</select>
	
</mapper>